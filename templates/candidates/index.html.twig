{% extends 'base.html.twig' %}

{% block title %} Candidats{% endblock %}

{% block body %}

    <div class="container">
        <div class="row">
            <div class="span5">
                <table class="table table-striped table-condensed">
                    <thead>
                    <tr>
                        <th>Prénom</th>
                        <th>Nom</th>
                        <th>Téléphone</th>
                        <th>Adresse mail</th>
                        <th>CV</th>
                        <th>Offre postulé</th>
                        <th>Detail</th>

                    </tr>
                    </thead>
                    <tbody>

                        {% for offer in offers %}

                            {% for candidat in candidats %}
                        <tr>
                                {% if candidat.offers.id == offer.id %}
                                    <td>{{ candidat.firstname}}</td>
                                    <td>{{ candidat.lastname }}</td>
                                    <td>{{ candidat.phone }}</td>
                                    <td>{{ candidat.email }}</td>
                                    <td>{{ candidat.cv }}</td>
                                    <td>{{ candidat.offers.title}}</td>
                                    <td><a href="{{ path('show_candidat', {'id':candidat.id}) }}" class="badge badge-success">Détail candidat</a></td>



                                    </td>
                                {% endif %}
                        </tr>
                        {% endfor %}


                        {% endfor %}



                    </tbody>
                </table>
            </div>
        </div>
    </div>

{% endblock %}
